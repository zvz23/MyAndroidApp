<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyAndroidApp.ForgotPassword"
             Title="ForgotPassword">
    <VerticalStackLayout Spacing="10"  BackgroundColor="#7978FF">
        <Frame  BackgroundColor="Transparent" BorderColor="Transparent" Margin="0,50,0,0">
            <VerticalStackLayout>
                <Label Text="Password Recovery" Margin="0,0,0,20" BackgroundColor="Transparent" TextColor="White" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="32"></Label>
                <Label Text="Enter your email address" TextColor="White" FontAttributes="Bold" FontSize="Medium" Margin="0,0,0,10" HorizontalOptions="Center"></Label>
                <Entry TextColor="White" Keyboard="Email" ClearButtonVisibility="WhileEditing"></Entry>

                <Button Text="Continue" Clicked="ContinueButtonClicked" FontAttributes="Bold" BackgroundColor="#1D1CE5" CornerRadius="20" Margin="0,15,0,0"></Button>
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>