<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyAndroidApp.PasswordReset"
             Title="PasswordReset">
    <VerticalStackLayout Spacing="10"  BackgroundColor="#7978FF">
        <Frame  BackgroundColor="Transparent" BorderColor="Transparent" Margin="0,50,0,0">
            <VerticalStackLayout>
                <Label Text="Reset Password" Margin="0,0,0,20" BackgroundColor="Transparent" TextColor="White" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="32"></Label>
                <Label Text="New password" TextColor="White" FontAttributes="Bold" FontSize="Small" Margin="0,0,0,10"></Label>
                 <Entry TextColor="White" IsPassword="True" ClearButtonVisibility="WhileEditing"></Entry>
                <Label Text="Confirm new password" TextColor="White" FontAttributes="Bold" FontSize="Small" Margin="0,10,0,10"></Label>
                <Entry TextColor="White" IsPassword="True" ClearButtonVisibility="WhileEditing"></Entry>
                <Button Text="Reset Password" FontAttributes="Bold" Clicked="PasswordResetButtonClicked" BackgroundColor="#1D1CE5" CornerRadius="20" Margin="0,15,0,0"></Button>
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>